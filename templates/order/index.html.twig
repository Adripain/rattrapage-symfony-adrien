{% extends 'base.html.twig' %}

{% block title %}Liste des Commandes{% endblock %}

{% block body %}
    <h1>Liste des Commandes</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Produits</th>
                <th>Date</th>
                <th>Telephone</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>
                        {% for product in order.products %}
                            {{ product }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ order.date }}</td>
                    <td>{{ order.phoneNumber }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_create') }}" class="btn btn-primary">Nouvelle une Commande</a>
{% endblock %}
